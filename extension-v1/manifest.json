{
  "manifest_version": 3,
  "name": "Memento Web Indexer",
  "version": "1.0.0",
  "description": "Index web pages for Memento",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "embedding-generator.js",
        "inverted-index.js",
        "journey-tracker.js",
        "storage-manager.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}